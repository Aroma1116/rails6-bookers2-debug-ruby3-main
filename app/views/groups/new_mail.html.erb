<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h1>Event Mail</h1>
  		<%= form_with url: group_send_mail_path(@group), method: :get, local:true do |f| %>
      <%= render 'layouts/errors', obj: @group %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :mail_title, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :content %>
        <%= f.text_area :mail_content, class: "form-control introduction" %>
      </div>
      <div class="form-group">
        <%= f.submit "送信", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>